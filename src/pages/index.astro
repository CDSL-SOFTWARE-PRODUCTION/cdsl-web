---
import Layout from '@layouts/Layout.astro';
import Hero from '@components/sections/Hero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Features from '@components/sections/Features.astro';
import Stats from '@components/sections/Stats.astro';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Logos from '@components/sections/Logos.astro';
import { logoLists } from '@data/logos';
import CtaBanner from '@components/sections/CtaBanner.astro';
import Faqs from '@components/sections/Faqs.astro';
import { faqLists } from '@data/faqs';
import RecentPosts from '@components/sections/RecentPosts.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';
import styleGuideImage from '../assets/images/home/developer.jpg';

const seoTitle = "CDSL - Advanced Technology Solutions";
const seoDescription = "CDSL is your forward-thinking technology partner, specializing in software development, digital transformation, IoT integration, and AI solutions.";

const heroContent = {
    title: 'Innovative Technology Solutions for the Digital Age',
    description: 'CDSL empowers businesses of all sizes with tailored technology solutions that transform ideas into reality. From web and mobile development to IoT integration and AI-driven innovations, we\'re here to guide your business toward a brighter digital future.',
    buttons: [
        {
            text: 'Our Services',
            link: '/services',
            target: '_self'
        },
        {
            text: 'Contact Us',
            link: '/contact',
            target: '_self'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "WHAT WE DO",
    title: "Comprehensive Digital Solutions",
    description: "We deliver cutting-edge technology solutions tailored to your unique business needs, ensuring exceptional user experiences and measurable results.",
    features: featureLists.main.features,
    button: {
        text: "View All Services",
        link: "/services",
        variant: "primary" as const
    }
}

const FooterCta = {
    eyebrow: "Partner With Us",
    title: 'Transform Your Vision into Reality',
    description: 'Ready to elevate your business with custom technology solutions? Let\'s start building your digital success story together.',
    hideCta: false,
    button: {
        text: 'Contact Us Today',
        link: '/contact',
        target: '_self'
    }
}

const clientPartnershipSection = {
    eyebrow: "Client-Centric Approach",
    headline: "Long-Term Partnerships, Lasting Results",
    description: "We view each engagement as a long-term relationship. Our commitment extends beyond project delivery with continuous support and iterative improvements to ensure your ongoing success.",
    image: {
        src: styleGuideImage,
        alt: "CDSL development team working"
    },
    buttons: [
        {
            text: "Our Process",
            link: "/about",
            variant: "primary" as const
        }
    ]
}

const sideBySideStats = {
    eyebrow: "Why Choose Us",
    title: "Committed to Excellence",
    description: "CDSL is driven by a passion for quality and innovation. Our team of experienced professionals delivers technology solutions that empower businesses to thrive in the digital age.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Technology Excellence",
        description: "We combine technical expertise with industry knowledge to create solutions that drive real business results. Our quality-first approach ensures reliability, performance, and scalability.",
        button: {
            text: "Learn More",
            link: "/about",
            variant: "primary" as const
        }
    }
};

const mainCta = {
    eyebrow: "Industries We Serve",
    title: "Specialized Solutions for Your Industry",
    description: "From logistics and healthcare to retail and finance, we deliver tailored technology solutions that address the unique challenges of your industry.",
    button: {
        text: "Explore Industries",
        link: "/industries",
        variant: "primary" as const,
        target: "_self" as const
    }
};

const logosSection = {
    eyebrow: "Trusted Partners",
    logos: logoLists.main.logos
}

const faqsSection = {
    eyebrow: "FAQs",
    title: 'Common Questions',
    description: 'Find answers to frequently asked questions about our services and process.',
    faqs: faqLists.main.faqs
}

const recentPostsSection = {
    eyebrow: "INSIGHTS & RESOURCES",
    title: "Tech Insights for Business Growth",
    description: "Stay updated with the latest trends, best practices, and insights from our technology experts.",
    button: {
        text: "View All Articles",
        link: "/blog",
        variant: "primary" as const
    }
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <SplitPanel content={clientPartnershipSection} imagePosition="right" background="base" padding="base" />
    <CtaBanner content={mainCta} variant="contained" background="light" paddingBottom="base" />
    <Logos content={logosSection} background="base" padding='small'/>
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <RecentPosts content={recentPostsSection} background="base" padding="base" postsToShow={3} />
    <Faqs content={faqsSection} background="light" padding="base" />
</Layout>