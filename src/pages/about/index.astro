---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import SplitPanel from '@components/sections/SplitPanel.astro';
import Stats from '@components/sections/Stats.astro';
import { statsLists } from '@data/stats';
import CtaBanner from '@components/sections/CtaBanner.astro';
import developerImg from '@assets/images/home/developer.jpg';

const title = "About CDSL";
const description = "Your forward-thinking technology partner for digital transformation";

// Hero content
const heroContent = {
    title: title,
    description: description,
};

const storySection = {
    eyebrow: "OUR STORY",
    headline: "Transforming Ideas Into Digital Reality",
    description: "Founded on the principles of quality, innovation, and long-term partnerships, CDSL was born out of a passion for transforming ideas into reality. Our mission is to make advanced technology accessible and effective for businesses facing the challenges of a digital era. We believe that great technology should be within reach regardless of scale, and we're here to guide your business toward a brighter digital future.",
    image: {
        src: developerImg,
        alt: "CDSL team collaboration"
    },
    buttons: []
};

const statsContent = {
    eyebrow: "Our Impact",
    title: "Driving Business Transformation",
    description: "We combine technical expertise with industry knowledge to create solutions that deliver measurable results for our clients.",
    variant: 'default' as const,
    stats: statsLists.withContent.stats
};

const valuesItems = [
    {
        title: "Quality First",
        description: "Every solution is built to ensure durability, reliability, and a superior user experience. We set premium standards to achieve excellence in every project."
    },
    {
        title: "Innovation & Agility",
        description: "We thrive on new challenges and continuously evolve our technologies and processes to stay ahead in a rapidly changing digital landscape."
    },
    {
        title: "Client-Centric Partnership",
        description: "We view each engagement as a long-term relationship. Our commitment extends beyond project delivery with continuous support and iterative improvements."
    },
    {
        title: "Transparency & Collaboration",
        description: "Open communication and collaborative planning lie at the heart of our approach, ensuring that your vision is realized with precision and care."
    }
];

const ctaContent = {
    eyebrow: "Join Our Journey",
    title: "Ready to Transform Your Business?",
    description: "Partner with us to leverage technology that drives growth, efficiency, and innovation.",
    button: {
        text: "Contact Our Team",
        link: "/contact",
        variant: "primary" as const
    }
};
---

<Layout title={title} description={description}>
    <InnerHero content={heroContent} />
    
    <SplitPanel content={storySection} imagePosition="right" background="light" padding="base" />
    
    <Stats content={statsContent} background="base" padding="base" />
    
    <section class="py-base bg-background-light">
        <div class="site-container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center mb-16">
                <h2 class="text-headline text-large mb-6">Our Values & Vision</h2>
                <p class="text-body-base">
                    These core principles guide our approach to technology development and client relationships.
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {valuesItems.map((value, index) => (
                    <div 
                        class="p-6 rounded-lg border border-black bg-background flex flex-col"
                        data-aos="fade-up"
                        data-aos-delay={index * 100}
                    >
                        <h3 class="text-h4 mb-3 text-headline">
                            {value.title}
                        </h3>
                        <p class="text-body-base">
                            {value.description}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    <CtaBanner content={ctaContent} background="base" padding="base" />
</Layout>
