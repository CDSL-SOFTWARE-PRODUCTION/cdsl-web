---
import Layout from '@layouts/Layout.astro';
import HeroSection from '@components/sections/about/HeroSection';
import CompanySection from '@components/sections/about/CompanySection';
import FocusSection from '@components/sections/about/FocusSection';
import ClientsSection from '@components/sections/about/ClientsSection';
import ScrollReveal from '@components/motion/ScrollReveal';

const title = "About CDSL";
const description = "Your boutique motion and technology partner for digital transformation";
---

<Layout title={title} description={description}>
    <main class="bg-premium-navy">
        {/* All components are client-side React with Motion */}
        <HeroSection client:load />
        
        <CompanySection client:visible />
        
        <FocusSection client:visible />
        
        <ClientsSection client:visible />

        <section class="py-24 bg-premium-navy border-t border-white/5">
            <div class="site-container px-4">
                <ScrollReveal direction="up" client:visible>
                    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-12">
                        <div>
                            <h2 class="text-8xl md:text-[12vw] font-bold leading-none tracking-tighter uppercase mb-2 text-white font-logo">
                                CDSL<span class="text-premium-blue">â„¢</span>
                            </h2>
                            <p class="text-sm font-medium tracking-widest uppercase text-premium-blue opacity-40">
                                Engineering / Future / Brands.
                            </p>
                        </div>
                        
                        <div class="grid grid-cols-2 gap-16 md:gap-24">
                            <div>
                                <span class="block text-xs font-bold tracking-widest uppercase mb-6 text-premium-blue opacity-60">Contact</span>
                                <ul class="space-y-4">
                                    <li><a href="mailto:contact@cdsl.tech" class="text-lg font-light text-premium-gray hover:text-premium-blue transition-colors">contact@cdsl.tech</a></li>
                                    <li><a href="/contact" class="text-lg font-light text-premium-gray hover:text-premium-blue transition-colors">Business Inquiry</a></li>
                                </ul>
                            </div>
                            <div>
                                <span class="block text-xs font-bold tracking-widest uppercase mb-6 text-premium-blue opacity-60">Social</span>
                                <ul class="space-y-4">
                                    <li><a href="https://linkedin.com/company/cdsl" target="_blank" class="text-lg font-light text-premium-gray hover:text-premium-blue transition-colors">LinkedIn</a></li>
                                    <li><a href="#" class="text-lg font-light text-premium-gray hover:text-premium-blue transition-colors">X / Twitter</a></li>
                                    <li><a href="#" class="text-lg font-light text-premium-gray hover:text-premium-blue transition-colors">Github</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </ScrollReveal>
            </div>
        </section>
    </main>
</Layout>

<style is:global>
    /* Ensure the motion system aesthetics are consistent */
    ::selection {
        background: rgba(var(--color-premium-blue-rgb), 0.2);
        color: inherit;
    }
</style>
