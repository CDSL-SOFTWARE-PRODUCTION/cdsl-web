---
import Layout from '@layouts/Layout.astro';
import InnerHero from '@components/sections/InnerHero.astro';
import { Code, Smartphone, Workflow, Zap, Share2 } from 'lucide-astro';
import CtaBanner from '@components/sections/CtaBanner.astro';

const title = "Our Services";
const description = "Comprehensive technology solutions tailored to your business needs";

// Hero content
const heroContent = {
    title: title,
    description: description,
};

const services = [
    {
        icon: Code,
        title: "Web & Web Application Development",
        description: "We build scalable, responsive websites and web applications customized to your brand and business needs. Our solutions are designed to engage users and drive growth, ensuring an exceptional digital presence."
    },
    {
        icon: Smartphone,
        title: "Mobile App Development",
        description: "In today's mobile-first world, our native and cross-platform mobile apps deliver outstanding user experiences, performance, and reliability across all devices."
    },
    {
        icon: Share2,
        title: "IoT Device Integration",
        description: "Harness the power of connectivity with our Internet of Things solutions. We develop smart systems that enable real-time monitoring, data collection, and seamless communication between devices for enhanced operational efficiency."
    },
    {
        icon: Workflow,
        title: "Automation Sequences",
        description: "Streamline your business operations with our tailor-made automation solutions. From repetitive tasks to complex workflows, our automation sequences are crafted to save time, reduce errors, and increase efficiency."
    },
    {
        icon: Zap,
        title: "AI & Machine Learning Solutions",
        description: "Leverage intelligent systems that transform data into actionable insights. Our AI solutions help businesses make smarter decisions, enhance personalization, and drive meaningful innovation."
    }
];

const ctaContent = {
    eyebrow: "Ready to get started?",
    title: "Let's Build Your Solution Together",
    description: "Contact us to discuss how we can help your business thrive with custom technology solutions.",
    button: {
        text: "Contact Us",
        link: "/contact",
        variant: "primary" as const
    }
};
---

<Layout title={title} description={description}>
    <InnerHero content={heroContent} />
    
    <section class="py-base bg-premium-navy">
        <div class="site-container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center mb-16">
                <h2 class="text-white text-large mb-6">Comprehensive Digital Solutions</h2>
                <p class="text-gray-300">
                    At CDSL, we deliver cutting-edge technology solutions tailored to your unique business needs, 
                    ensuring exceptional user experiences and measurable results.
                </p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 auto-rows-fr">
                {services.map((service, index) => (
                    <div 
                        class="p-8 rounded-lg border border-white/10 bg-premium-navy-light flex flex-col hover:border-premium-blue/50 transition-colors group"
                        data-aos="fade-up"
                        data-aos-delay={index * 100}
                    >
                        <div class="w-14 h-14 flex items-center justify-center rounded-lg mb-4 bg-premium-blue/10 group-hover:bg-premium-blue/20 transition-colors">
                            <service.icon
                                size={28}
                                class="text-premium-blue"
                            />
                        </div>
                        <h3 class="text-h4 mb-4 text-white">
                            {service.title}
                        </h3>
                        <p class="text-gray-400 font-light">
                            {service.description}
                        </p>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    <CtaBanner content={ctaContent} background="base" padding="base" />
</Layout>
