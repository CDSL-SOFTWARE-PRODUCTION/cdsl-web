---
import { logoLists } from '@data/logos';
import { Image } from 'astro:assets';

const logos = logoLists.main.logos;
---

<section class="py-20 bg-premium-navy border-b border-white/5">
    <div class="site-container px-4 text-center">
        <p class="text-premium-gray text-sm tracking-widest uppercase mb-12 font-mono opacity-0 reveal-trust">Trusted by forward-thinking companies</p>
        
        <div class="flex flex-wrap justify-center gap-12 md:gap-20 items-center grayscale opacity-0 reveal-trust">
             {logos.map((logo, index) => (
                <div class="w-32 h-12 relative group transition-all duration-300 hover:grayscale-0 hover:opacity-100 opacity-50">
                    <Image 
                        src={logo.src} 
                        alt={logo.alt}
                        class="w-full h-full object-contain"
                    />
                </div>
            ))}
        </div>
    </div>
</section>

<script>
    import { inView, animate, stagger } from 'motion';
    
    inView('.reveal-trust', (element) => {
        animate(
            element,
            { opacity: [0, 1] },
            { duration: 1, delay: stagger(0.2) }
        );
    });
</script>
