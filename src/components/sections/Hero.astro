---
import Button from '@components/ui/Button.astro';
import Logo from '@components/Logo.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-base-100 transition-colors duration-300">
    <!-- Background Textures -->
    <div class="absolute inset-0 z-0 pointer-events-none">
        <!-- Technical Grid Background -->
        <div class="absolute inset-0 bg-[linear-gradient(rgba(102,252,241,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(102,252,241,0.03)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_at_center,black_40%,transparent_80%)]"></div>

        <!-- Subtle noise texture overlay -->
        <div class="absolute inset-0 bg-[url('/noise.png')] opacity-[0.03] mix-blend-overlay"></div>
        
        <!-- Premium Gradient Glow -->
        <div class="absolute top-[-20%] left-[-10%] w-[60%] h-[60%] bg-premium-blue/5 blur-[150px] rounded-full"></div>
        <div class="absolute bottom-[-20%] right-[-10%] w-[60%] h-[60%] bg-premium-navy-light/30 blur-[150px] rounded-full"></div>
    </div>

        <!-- Giant Background Logo with Grid -->
        <div class="absolute inset-0 z-[1] flex justify-center items-center overflow-hidden pointer-events-none select-none">
            <!-- Grid pattern behind the logo -->
            <div class="absolute inset-0 bg-[linear-gradient(rgba(102,252,241,0.08)_1px,transparent_1px),linear-gradient(90deg,rgba(102,252,241,0.08)_1px,transparent_1px)] bg-[size:3rem_3rem] opacity-40"></div>
            
            <div class="hero-logo-wrapper w-full flex justify-center relative z-[2]" style="opacity: 0; transform: scale(2.5);">
                <!-- 
                   Responsive font sizes to ensure it fills the width without overflowing too much
                -->
                <Logo variant="hero" class="text-[28vw] md:text-[22vw] lg:text-[18vw] leading-none text-white/5 font-black tracking-widest w-full text-center" />
            </div>
        </div>

<script>
    import { animate } from "motion";
    
    // Ensure accurate timing
    document.addEventListener('DOMContentLoaded', () => {
        requestAnimationFrame(() => {
            const wrapper = document.querySelector('.hero-logo-wrapper');
            if (wrapper) {
                // Animating the wrapper for scale/opacity
                animate(
                    wrapper,
                    { 
                        transform: ["scale(2.5)", "scale(1)"],
                        opacity: [0, 1],
                    } as any,
                    { 
                        duration: 8, 
                        easing: [0.22, 1, 0.36, 1] 
                    } as any
                );
            }
        });
    });
</script>

    <div class="site-container relative z-10 px-4 w-full h-full flex flex-col justify-center">
        <div class="max-w-7xl mx-auto">
            <!-- Kinetic Typography Headline -->
            <h1 class="font-display font-bold text-6xl md:text-8xl lg:text-9xl leading-[0.9] tracking-tighter text-white mb-12 transition-colors duration-300">
                <div class="overflow-hidden">
                    <span class="inline-block">Turn</span>
                    <span class="inline-block text-premium-gray">Ops</span>
                    <span class="inline-block">Chaos</span>
                </div>
                <div class="overflow-hidden">
                    <span class="inline-block">Into</span>
                    <span class="inline-block text-premium-blue">Profit</span>
                </div>
            </h1>

            <!-- Separator Line -->
            <div class="w-full h-[1px] bg-premium-blue/20 relative overflow-hidden mt-8 mb-8">
                <div class="absolute top-0 left-0 w-full h-full bg-premium-blue/50"></div>
            </div>

            <div class="flex flex-col md:flex-row items-start md:items-center justify-between gap-8">
                <!-- Subheadline -->
                <p class="text-lg md:text-xl text-premium-gray max-w-xl font-light leading-relaxed transition-colors duration-300">
                    We engineer autonomous systems for growing consultancy businesses, turning fragmented operations into a unified engine for growth.
                </p>

                <!-- Minimal CTA -->
                <div class="flex items-center gap-6">
                    <a href="/work" class="group flex items-center gap-2 text-white font-medium hover:text-premium-blue transition-colors">
                        <span>Selected Works</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transform group-hover:translate-x-1 transition-transform"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
                    </a>
                    <a href="/contact" class="px-8 py-4 bg-premium-blue text-premium-navy font-bold rounded-none hover:bg-premium-blue/80 transition-colors">
                        Start Project
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>


