---
import { Image } from 'astro:assets';
import logo from '../assets/astro.svg';
interface Props {
    variant?: 'header' | 'footer' | 'dark';
}

const { variant = 'header' } = Astro.props;

// Determine the appropriate CSS class based on the variant
const getLogoClass = () => {
    switch (variant) {
        case 'header':
            return 'text-white hover:text-premium-blue';
        case 'footer':
            return 'text-white hover:text-premium-blue';
        case 'dark':
            return 'text-white hover:text-premium-blue';
        default:
            return 'text-white hover:text-premium-blue';
    }
};
---

<a href="/" class:list={['logo uppercase font-logo transition-colors duration-200', getLogoClass()]}>
    <Image src={logo} alt="" class="hidden" />
    <span class="font-bold">CDSL</span>
</a>
