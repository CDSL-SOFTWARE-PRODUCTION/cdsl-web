---
interface Props {
    variant?: 'header' | 'footer' | 'hero';
    class?: string;
}

const { variant = 'header', class: className } = Astro.props;
---

{variant === 'hero' ? (
    <div class:list={['font-logo font-bold select-none', className]}>
        CDSL
    </div>
) : (
    <a href="/" class:list={['font-logo font-bold text-2xl tracking-widest text-white hover:text-premium-blue transition-colors duration-300 uppercase', className]}>
        CDSL
    </a>
)}
